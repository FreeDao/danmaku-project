<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/account_avatar_bg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/account_bg"
            android:orientation="vertical"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/account_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/default_avatar"
                android:scaleType="centerInside"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/my_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/fragment_my_click_to_login"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/my_fav"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_setting_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dip"
                android:layout_marginStart="70dip"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_fav"
                android:textColor="@color/text_black_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/tv_setting_view_content"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dip"
                android:layout_marginStart="30dip"
                android:layout_centerVertical="true"
                android:src="@drawable/image_my_attention"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="29dp"
                android:layout_marginEnd="29dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_indicator"
                android:contentDescription="@null" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/my_information"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dip"
                android:layout_marginStart="70dip"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_information"
                android:textColor="@color/text_black_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dip"
                android:layout_marginStart="30dip"
                android:layout_centerVertical="true"
                android:src="@drawable/image_my_information"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="29dp"
                android:layout_marginEnd="29dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_indicator"
                android:contentDescription="@null" />
        </RelativeLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/my_history"
            android:layout_width="match_parent"
            android:layout_height="50dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dip"
                android:layout_marginStart="70dip"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_history"
                android:textColor="@color/text_black_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dip"
                android:layout_marginStart="30dip"
                android:layout_centerVertical="true"
                android:src="@drawable/image_my_history"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="29dp"
                android:layout_marginEnd="29dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_indicator"
                android:contentDescription="@null" />
        </RelativeLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/my_setting"
            android:layout_width="match_parent"
            android:layout_height="50dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dip"
                android:layout_marginStart="70dip"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_setting"
                android:textColor="@color/text_black_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dip"
                android:layout_marginStart="30dip"
                android:layout_centerVertical="true"
                android:src="@drawable/image_my_setting"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="29dp"
                android:layout_marginEnd="29dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_indicator"
                android:contentDescription="@null" />
        </RelativeLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/my_aboutus"
            android:layout_width="match_parent"
            android:layout_height="50dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dip"
                android:layout_marginStart="70dip"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_about"
                android:textColor="@color/text_black_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dip"
                android:layout_marginStart="30dip"
                android:layout_centerVertical="true"
                android:src="@drawable/image_my_about"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="29dp"
                android:layout_marginEnd="29dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_indicator"
                android:contentDescription="@null" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>